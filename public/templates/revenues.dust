<script>
    $(document).ready(function(){
        var i=1;
        $("#add_row").click(function(){
            $('#addr'+i).html("<td><input name='source"+i+"' type='text' placeholder='Source' class='form-control input-md' /></td><td><input name='date"+i+"' id='datepicker' type='text' placeholder='Date' class='form-control input-md'  /> </td><td><input  name='project"+i+"' type='text' placeholder='Project'  class='form-control input-md'></td><td><input  name='chapter"+i+"' type='text' placeholder='Chapter'  class='form-control input-md'></td><td><input  name='amount"+i+"' type='text' placeholder='Amount'  class='form-control input-md'></td><td><input  name='donorDetails"+i+"' type='text' placeholder='Donor Details'  class='form-control input-md'></td>");

            $('#tab_logic').append('<tr id="addr'+(i+1)+'"></tr>');
            i++;
        });
        $("#update_row").click(function(){
            if(i>1){
                $("#addr"+(i-1)).html('');
                i--;
            }
        });
    });
</script>
<script>

